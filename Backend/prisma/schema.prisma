generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExerciseType {
  WEIGHT
  DURATION
  DISTANCE_TIME
  CHRONO
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  routines     Routine[]
  trainings    Training[]

  @@index([email])
}

model Routine {
  id          String            @id @default(uuid())
  userId      String
  name        String
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises   RoutineExercise[]
  trainings   Training[]

  @@index([userId])
}

model RoutineExercise {
  id          String        @id @default(uuid())
  routineId   String
  name        String
  exerciseType ExerciseType @default(WEIGHT)
  description String?
  photoUrl    String?
  position    Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  routine     Routine       @relation(fields: [routineId], references: [id], onDelete: Cascade)
  sets        TrainingSet[]

  @@index([routineId, position])
}

model Training {
  id                  String        @id @default(uuid())
  userId              String
  routineId           String?
  routineNameSnapshot String
  startedAt           DateTime      @default(now())
  endedAt             DateTime?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  user                User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  routine             Routine?      @relation(fields: [routineId], references: [id], onDelete: SetNull)
  sets                TrainingSet[]

  @@index([userId, startedAt])
}

model TrainingSet {
  id                  String           @id @default(uuid())
  trainingId          String
  routineExerciseId   String?
  exerciseNameSnapshot String
  exerciseTypeSnapshot ExerciseType    @default(WEIGHT)
  setNumber           Int
  weightKg            Float?
  durationSec         Int?
  distanceMeters      Float?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  training            Training         @relation(fields: [trainingId], references: [id], onDelete: Cascade)
  routineExercise     RoutineExercise? @relation(fields: [routineExerciseId], references: [id], onDelete: SetNull)

  @@index([trainingId, exerciseNameSnapshot, setNumber])
}
